
<div class = "techBlogDiv">
            <a id = "changeAble" class = "techBlog">The Tech Blog</a>
 </div>
<ul class="post-list">
    
    <li class = "post-item">
        <article>
    <div class = "title">
        <a>{{post.title}}</a>
        <p class = "userInfo">Posted by {{post.user.username}} on {{format_date post.created_at}}</p>
    </div>
    <div class = "content">
        <p>{{post.content}}</p>
    </div>
    
</article>
    </li>
   
{{#if loggedIn}}
        <ul class="comment-list">
            
            <li class = "post-item">
                <article>
                    <div class = "commentTitle"></div>

                    <div class = "commentContent">
                        <p>Comment</p>
                        <input type="text" name="" id="commentInput">
                    </div>
            <button id = "addComment"type = 'click'>Submit</button>
                </article>
            </li>
        
        </ul>
{{/if}}
        
        {{#each post.comments}}
        <ul class="comment-list">
            
            <li class = "post-item">
                <article>
                    <div class = "commentTitle">
                        
                    </div>
                    <div class = "commentContent">
                        <p>{{comment_text}}</p>
                        <p>-- {{user.username}}, {{format_date createdAt}}</p>
                    </div>
            
                </article>
            </li>
        
        </ul>
        {{/each}}
        
</ul>
{{#if loggedIn}}
<script src="/javascript/add-comment.js"></script>
{{/if }}